{
  "compilerOptions": {
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "newLine": "LF",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "es2015",
    "jsx": "react",
    "lib": ["es5", "es6", "dom", "es2017"],
    "outDir": "./js/"
  },
  "include": [
    "base/**/*",
    "apps/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
